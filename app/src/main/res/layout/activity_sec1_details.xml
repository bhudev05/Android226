<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sec1_details">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sec1_details"
        android:text=" Details of Section_1"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:layout_below="@+id/sec1_details"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add  Exam's  Detals"
        android:id="@+id/ad"/>

    <Button
        android:layout_below="@+id/ad"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View  Exam's  Detais"
        android:id="@+id/view"/>
    <Button
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update  Exam's  Details"
        android:id="@+id/update"/>
    <Button
        android:layout_below="@+id/update"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete  Exam's  Details"
        android:id="@+id/delete"/>
    <Button
        android:layout_below="@+id/delete"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search  Exam's  Details"
        android:id="@+id/search"/>



</RelativeLayout>